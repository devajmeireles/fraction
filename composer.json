{
    "name": "fraction/fraction",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Fraction\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "AJ Meireles",
            "email": "alvaro.meireles@live.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.0",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.0",
        "rector/rector": "^2.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fraction\\FractionServiceProvider"
            ],
            "aliases": {
                "Fraction": "Fraction\\Facades\\Fraction"
            }
        }
    },
    "scripts": {
        "coverage": [
            "rm -fr coverage/",
            "./vendor/bin/pest --parallel --coverage --coverage-html=coverage"
        ],
        "test": [
            "./vendor/bin/pest --parallel"
        ],
        "format": [
            "./vendor/bin/pint"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "rector": [
            "vendor/bin/rector process --dry-run"
        ],
        "ci": [
            "./vendor/bin/pint --test",
            "./vendor/bin/phpstan analyse --memory-limit=2G",
            "./vendor/bin/pest --parallel --coverage --min=90"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
